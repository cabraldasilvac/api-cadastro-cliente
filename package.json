{
    "name": "api-cadastro-cliente",
    "version": "1.0.0",
    "description": "API Cadastro de clientes - usando o prisma e MongoDB. Projeto roda na Vercel.",
    "scripts": {
      "dev": "tsx watch src/app.ts", // Script para ambiente de desenvolvimento
      "build": "npm run prisma:generate && npm run typescript:compile", // Script para build
      "prisma:generate": "prisma generate", // Comando para gerar os artefatos do Prisma
      "typescript:compile": "tsc", // Comando para compilar o TypeScript
      "vercel": "vercel dev", // Comando para executar localmente com Vercel
      "deploy": "npm run prisma:generate && npx vercel --prod" // Comando para fazer deploy na Vercel
    },

    "keywords": [],
    "author": "Wanderley Cabral",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^20.12.2",
        "@vercel/node": "^3.0.25",
        "prisma": "^5.11.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.3"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@prisma/client": "^5.11.0",
        "dotenv": "^16.4.5",
        "fastify": "^4.26.2",
        "save": "^2.9.0",
        "tsx": "^4.7.1"
    }
}
